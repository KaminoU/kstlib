# EditorConfig - kstlib
# https://editorconfig.org/

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Python stub files
[*.pyi]
indent_style = space
indent_size = 4
max_line_length = 120

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files (no trailing whitespace trim for double-space line breaks)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# INI files
[*.{ini,cfg}]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
indent_style = space
indent_size = 2
end_of_line = crlf

# PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 4
end_of_line = crlf

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# RST files (Sphinx documentation)
[*.rst]
indent_style = space
indent_size = 3
max_line_length = 120
