# =============================================================================
# MANIFEST.in - kstlib
# =============================================================================

# --- Essential files ---
include LICENSE.md
include README.md
include pyproject.toml

# --- Package data ---
recursive-include src/kstlib *.yml
recursive-include src/kstlib *.yaml
recursive-include src/kstlib py.typed

# --- Exclude directories ---
prune examples
prune tests
prune infra
prune docs
prune .*

# --- Exclude dev files ---
exclude tox.ini
exclude Makefile

# --- Exclude Python cache & build artifacts ---
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude *.egg-info
global-exclude .DS_Store