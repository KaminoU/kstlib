# LocalStack configuration for kstlib
# Copy this file to .env and adjust as needed

# LocalStack gateway port (default: 4566)
LOCALSTACK_PORT=4566

# LocalStack web UI port (default: 4510)
LOCALSTACK_UI_PORT=4510

# Default AWS region
AWS_DEFAULT_REGION=us-east-1

# Data persistence between restarts (1 = enabled)
LOCALSTACK_PERSISTENCE=1

# Debug mode (0 = off, 1 = on)
LOCALSTACK_DEBUG=0

# --- Python test variables ---
# LocalStack endpoint (used by boto3/kstlib)
AWS_ENDPOINT_URL=http://localhost:4566

# Fake credentials (LocalStack accepts any)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
